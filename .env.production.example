# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Docker Hub Repository (must match your GitHub secrets)
DOCKERHUB_REPOSITORY=yourusername/drf-ecommerce-backend

# RDS PostgreSQL Database Configuration
DB_NAME=ecommerce_db
DB_USER=your_rds_username
DB_PASSWORD=your_rds_password
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432

# Django Settings
SECRET_KEY=your-production-secret-key-here
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Gunicorn Configuration (optional - defaults shown)
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=30
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=50

# Optional: Set to true to populate initial data on first deployment
POPULATE_DATA=false

# Logging
LOG_LEVEL=info

# Nginx Port (optional - defaults to 80)
NGINX_PORT=80
